{
	"extends": [
		"stylelint-config-standard"
	],
	"plugins": [
		"stylelint-order"
	],
	"rules": {
		"indentation": "tab",
		"declaration-empty-line-before": [
			"never",
			{
				"except": [],
				"ignore": [
					"after-comment",
					"after-declaration",
					"inside-single-line-block"
				]
			}
		]
	}
}